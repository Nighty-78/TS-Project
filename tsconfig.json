{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "es2021",
    "module": "es2020",
    "lib": ["esnext"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "declarationMap": true
  }
}
